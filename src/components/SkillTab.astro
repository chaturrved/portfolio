---
import SkillBadge  from "@/components/SkillBadge.astro"
import type { SkillCardProps, Skill } from "@/data/skills";
type Props = SkillCardProps;

const { skillGroup, type } = Astro.props;
---

<>
 {
    (
      <div class="t group flex flex-col justify-between gap-2 rounded-md border border-neutral-700 p-2">
        <div class="flex flex-col gap-2 md:flex-row md:items-center md:gap-4">
          <p class="text-neutral-100">{type}</p>
        </div>
        {skillGroup.length === 0 && <p>I must get to work quickly! ^-^</p>}
        <p class="w-fit px-1 py-1">
          {
            skillGroup.length !== 0 &&
              skillGroup.map((skill:Skill)=> <SkillBadge {...skill}/>)             
          }
        </p>
      </div>
    )
  }
</>